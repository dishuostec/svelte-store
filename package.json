{
	"name": "@dishuostec/svelte-store",
	"version": "2.0.0-next.1",
	"description": "Touchable store",
	"keywords": [
		"svelte store",
		"deep equal",
		"touchable store",
		"stopwatch store",
		"countdown store",
		"derived record store"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dishuostec/svelte-store.git"
	},
	"author": "dishuostec",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/dishuostec/svelte-store/issues"
	},
	"homepage": "https://github.com/dishuostec/svelte-store#readme",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/",
		"directory": "dist"
	},
	"scripts": {
		"n": "node --loader @esbuild-kit/esm-loader",
		"build": "node scripts/build.js",
		"tsd": "tsc --emitDeclarationOnly -p tsconfig.build.json",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"test": "mocha",
		"check": "tsc --noEmit",
		"release": "pnpm test && pnpm build && pnpm tsd && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && pnpm publish",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@esbuild-kit/esm-loader": "^2.5.5",
		"@types/mocha": "^10.0.1",
		"@types/node": "^20.0.0",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"@typescript-eslint/parser": "^5.59.2",
		"esbuild": "^0.18.14",
		"eslint": "^8.45.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"mocha": "^10.2.0",
		"prettier": "^2.8.8",
		"sucrase": "^3.32.0",
		"svelte": "^4.0.5",
		"typescript": "^5.1.6"
	},
	"peerDependencies": {
		"svelte": "^4.0.5"
	},
	"type": "module",
	"dependencies": {
		"fast-deep-equal": "^3.1.3"
	},
	"lint-staged": {
		"*.{js,ts,json}": "prettier --write"
	}
}
